<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@android:drawable/dialog_holo_light_frame"
    android:padding="10dp"
    android:layout_gravity="start"
    android:gravity="start"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:padding="1dp"
        android:scaleType="center"
        tools:src="@drawable/image_message_to_developers"
        android:layout_gravity="start|center"
        android:id="@+id/image_from_ad"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <RelativeLayout
        android:paddingBottom="3dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="100dp">
        <TextView
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            android:singleLine="true"
            android:maxLines="1"
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#696969"
            android:textStyle="bold"
            android:typeface="serif"
            tools:text="Перенести ветки" />
        <TextView
            android:layout_marginStart="5dp"
            tools:text="@string/save"
            android:layout_below="@id/tvText"
            android:id="@+id/about_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TableRow
            android:background="@drawable/back"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/cost_job_main_list_red"
                tools:text="50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/cost_job_main_list_red_dollar"
                tools:text="$"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TextView
            android:id="@+id/visions"
            android:textColor="#000"
            android:layout_margin="4dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            tools:text="23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>