<FrameLayout
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:text="@string/registration_yur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:id="@+id/name_company"
                android:hint="@string/name_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:id="@+id/about_company"
                android:hint="@string/about_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:id="@+id/date_of_start_company"
                android:hint="@string/date_start_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:id="@+id/type_of_work_company"
                android:hint="@string/type_of_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Spinner
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:id="@+id/spinner_kategory_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:id="@+id/contacts_company"
                android:hint="@string/contacts_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:id="@+id/address_company"
                android:hint="@string/adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:padding="10dp"
                android:textColor="#fff"
                android:background="@color/blue"
                android:id="@+id/button_save_company"
                android:layout_gravity="center"
                android:text="@string/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>