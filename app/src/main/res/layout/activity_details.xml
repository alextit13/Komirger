<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.accherniakocich.android.findjob.activities.Details">

    <ScrollView
        android:id="@+id/sctoll_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingBottom="40dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <HorizontalScrollView
                android:id="@+id/HSV"
                android:layout_width="wrap_content"
                android:layout_height="250dp">
                <LinearLayout
                    android:id="@+id/lin_lay"
                    android:orientation="horizontal"
                    android:layout_width="1250dp"
                    android:layout_height="250dp">
                    <ImageView
                        android:id="@+id/image_content_details_1"
                        android:scaleType="center"
                        android:layout_width="250dp"
                        android:layout_height="250dp" />
                    <ImageView
                        android:scaleType="center"
                        android:id="@+id/image_content_details_2"
                        android:layout_width="250dp"
                        android:layout_height="250dp" />
                    <ImageView
                        android:scaleType="center"
                        android:id="@+id/image_content_details_3"
                        android:layout_width="250dp"
                        android:layout_height="250dp" />
                    <ImageView
                        android:scaleType="center"
                        android:id="@+id/image_content_details_4"
                        android:layout_width="250dp"
                        android:layout_height="250dp" />
                    <ImageView
                        android:scaleType="center"
                        android:id="@+id/image_content_details_5"
                        android:layout_width="250dp"
                        android:layout_height="250dp" />
                </LinearLayout>
            </HorizontalScrollView>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:id="@+id/name_ad_details"
                        android:textSize="20sp"
                        android:textColor="#000"
                        tools:text="Бас-гитара Cort Curdow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/date_detail"
                        android:textColor="#000000"
                        android:textAlignment="viewStart"
                        android:text="@string/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ImageView
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/navigation_favorite"
                    android:id="@+id/fab_favorit"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
            </RelativeLayout>
            <TextView
                android:background="@color/blue"
                android:textStyle="bold"
                android:id="@+id/cost_job_detail"
                android:typeface="serif"
                android:textSize="23sp"
                android:textColor="#ffffff"
                android:textAllCaps="true"
                android:gravity="center"
                android:textAlignment="center"
                android:text="@string/money"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <TableRow
                android:background="#d2d2d2"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    tools:src="@drawable/register_now"
                    android:id="@+id/circle_image_view_people"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:textColor="#000"
                    android:textSize="18sp"
                    tools:text="Евгений"
                    android:id="@+id/people_name"
                    android:paddingStart="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry" />
            </TableRow>
            <View
                android:background="#8e8e8e"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:paddingStart="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/category"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    tools:ignore="RtlSymmetry" />
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/category_details"
                    android:gravity="center"
                    android:text="@string/category"
                    android:textSize="16sp"
                    android:layout_margin="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="#8e8e8e"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:paddingStart="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/adress"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    tools:ignore="RtlSymmetry" />
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/adress_detail"
                    android:gravity="center"
                    tools:text="@string/adress"
                    android:textSize="16sp"
                    android:layout_margin="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="#8e8e8e"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:paddingStart="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    tools:ignore="RtlSymmetry" />
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/text_number_of_phone"
                    android:gravity="center"
                    tools:text="+357485552"
                    android:textSize="16sp"
                    android:layout_margin="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="#8e8e8e"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:padding="5dp"
                android:gravity="start"
                tools:text="@string/large_text"
                android:id="@+id/text_detais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textColor="#000000"
                android:textAlignment="viewStart"
                android:textSize="20sp"/>
        </LinearLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/fab_delete"
        android:layout_margin="8dp"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/ic_delete_black_24dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <ImageView
        android:id="@+id/fab_edit"
        android:layout_margin="8dp"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_edit_black_24dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TableRow
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:layout_width="50dp"
        android:layout_height="10dp">
        <ImageView
            android:id="@+id/indicator_1"
            app:srcCompat="@drawable/indicator_not_empty"
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <ImageView
            android:id="@+id/indicator_2"
            app:srcCompat="@drawable/indicator_empty"
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <ImageView
            android:id="@+id/indicator_3"
            app:srcCompat="@drawable/indicator_empty"
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <ImageView
            android:id="@+id/indicator_4"
            app:srcCompat="@drawable/indicator_empty"
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <ImageView
            android:id="@+id/indicator_5"
            app:srcCompat="@drawable/indicator_empty"
            android:layout_width="10dp"
            android:layout_height="10dp"/>
    </TableRow>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_call"
            app:srcCompat="@drawable/phone"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/message_detail"
            app:srcCompat="@drawable/post"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp" />
    </RelativeLayout>
</RelativeLayout>

