<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.accherniakocich.android.findjob.activities.Details"
    tools:showIn="@layout/activity_details">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_marginEnd="10sp"
            android:layout_marginTop="40sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:id="@+id/date_detail"
                android:typeface="serif"
                android:textSize="23sp"
                android:textColor="#000000"
                android:textAllCaps="true"
                android:textAlignment="viewStart"
                android:text="@string/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:id="@+id/cost_job_detail"
                android:typeface="serif"
                android:textSize="23sp"
                android:textColor="#000000"
                android:textAllCaps="true"
                android:textAlignment="viewEnd"
                android:text="@string/money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>
        <TextView
            android:id="@+id/category_details"
            android:gravity="center"
            android:text="@string/category"
            android:textSize="20sp"
            android:layout_margin="4dp"
            android:textColor="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:padding="4dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/layer"
            android:textColor="#000000"
            android:textSize="28sp"
            tools:text="+2257785545"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:id="@+id/text_number_of_phone"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TableRow
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/fab"
                android:layout_gravity="center"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <ImageView
                android:id="@+id/call"
                android:src="@drawable/call"
                android:layout_gravity="center"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
        </TableRow>
        <TextView
            android:textStyle="bold"
            android:padding="5dp"
            android:gravity="center"
            tools:text="Тут какой то текст"
            android:id="@+id/text_detais"
            android:typeface="serif"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textColor="#3c3d40"
            android:textAlignment="center"
            android:textSize="20sp"/>
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/name_add_generator_ad"
            android:layout_margin="5dp"
            android:gravity="center"
            tools:text="Alexey"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="150dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="750dp"
                android:layout_height="150dp">
                <ImageView
                    android:id="@+id/image_content_details_1"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />
                <ImageView
                    android:id="@+id/image_content_details_2"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />
                <ImageView
                    android:id="@+id/image_content_details_3"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />
                <ImageView
                    android:id="@+id/image_content_details_4"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />
                <ImageView
                    android:id="@+id/image_content_details_5"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />
            </LinearLayout>
        </HorizontalScrollView>
        <Button
            android:id="@+id/share"
            android:text="@string/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
